{
	"search.followSymlinks": false,
	"breadcrumbs.enabled": true,
	"window.zoomLevel": 0,
	"files.encoding": "utf8",
	//workbench
	"workbench.editor.enablePreviewFromQuickOpen": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmDelete": false,
	//终端
	"terminal.integrated.fontSize": 15,
	// 编辑设置
	"editor.detectIndentation": false,
	"editor.quickSuggestionsDelay": 0,
	"editor.wordBasedSuggestions": true,
	"editor.suggestOnTriggerCharacters": true,
	"editor.formatOnType": false, // 输入时就进行格式化，默认触发字符较少，分号可以触发
	"editor.formatOnSave": false,
	"editor.snippetSuggestions": "top",
	"editor.minimap.enabled": false,
	"editor.renderControlCharacters": true,
	"editor.renderWhitespace": "all",
	"editor.hover.delay": 0,
	"editor.fontFamily": "Consolas",
	"editor.quickSuggestions": {
		"other": true,
		"comments": false,
		"strings": false,
	},
	"editor.suggestSelection": "first",
	"editor.suggest.snippetsPreventQuickSuggestions": false,
	"editor.fontSize": 15,
	"editor.mouseWheelZoom": true,
	// C_CPP插件设置
	// 修改为你自己的gcc的路径
	"C_Cpp.default.compilerPath": "C:/Program Files (x86)/CodeBlocks/MinGW/bin/g++.exe",
	"C_Cpp.default.intelliSenseMode": "gcc-x86",
	"C_Cpp.default.includePath": [
		"${workspaceFolder}/**"
	],
	"C_Cpp.default.browse.path": [
		"${workspaceFolder}/**"
	],
	"C_Cpp.default.cStandard": "c99",
	"C_Cpp.default.cppStandard": "c++11",
	"C_Cpp.intelliSenseEngineFallback": "Disabled",
	"C_Cpp.intelliSenseEngine": "Default", // 可以为Default或Tag Parser，后者较老，功能较简单。具体差别参考cpptools插件文档
	"C_Cpp.errorSquiggles": "Enabled",
	"C_Cpp.clang_format_sortIncludes": false,
	"C_Cpp.clang_format_style": "{ BasedOnStyle: Google, UseTab: Never, IndentWidth: 4, TabWidth: 4, AllowShortIfStatementsOnASingleLine: false, IndentCaseLabels: false, ColumnLimit: 0, AccessModifierOffset: -4, NamespaceIndentation: All }",
	"C_Cpp.suggestSnippets": false,
	"emmet.showSuggestionsAsSnippets": true,
	"emmet.showAbbreviationSuggestions": false,
	//code runner插件设置
	"code-runner.runInTerminal": true, // 设置成false会在“输出”中输出，无法交互
	"code-runner.executorMap": {
		"c": "cd $dir & gcc -std=c11 $fileName -o .\\exes\\$fileNameWithoutExt.exe && .\\exes\\$fileNameWithoutExt.exe",
        "cpp": "cd $dir & g++ -std=c++11 -finput-charset=UTF-8 -fexec-charset=GBK $fileName -o .\\exes\\$fileNameWithoutExt.exe && .\\exes\\$fileNameWithoutExt.exe"
	}, // 设置code runner的命令行
	"code-runner.saveFileBeforeRun": true, // run code前保存
	"code-runner.saveAllFilesBeforeRun": true,
	"code-runner.preserveFocus": true, // 若为false，run code后光标会聚焦到终端上。如果需要频繁输入数据可设为false
	"code-runner.clearPreviousOutput": false // 每次run code前清空属于code runner的终端消息
}